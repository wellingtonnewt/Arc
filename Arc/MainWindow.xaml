<Window x:Class="Arc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arc"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="ARC" Height="720" Width="1280" Background="#212121">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75 "/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Left Menu Bar-->
        <ListBox Name="MenuItemsListBox" Grid.Column="0" Background="#FF2D2D2D" BorderBrush="{x:Null}" ItemsSource="{Binding MenuItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding ImagePath}" Margin="5" MinWidth="50" MinHeight="50"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.Effect>
                <DropShadowEffect Color="#FF2D2D2D" Opacity="1" BlurRadius="10"/>
            </ListBox.Effect>
        </ListBox>

        <!--Usercontrowl area-->
        <ContentControl Grid.Column="1" Margin="10,0,0,0" Content="{Binding ElementName=MenuItemsListBox, Path=SelectedItem.Control}"/>

    </Grid>
</Window>
