<Window x:Class="Arc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arc"
        mc:Ignorable="d"
        Title="ARC" Height="720" Width="1280" Background="#212121">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="274*"/>
            <RowDefinition Height="431*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75 "/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0" Background="#2D2D2D" Grid.RowSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="1" Cursor="AppStarting" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                <Image Source="Resources/Images/Music_White.png" Margin="20"/>
            </Button>

        </Grid>
        <!-- Search For Songs -->
        <StackPanel Grid.Column="1" Grid.RowSpan="2">

            <TextBox Margin="50 75 50 0">Search</TextBox>

            <ListView Margin="50 15 50 0">

                <ListViewItem Content="Song 1"></ListViewItem>
                <ListViewItem Content="Song 2"></ListViewItem>
                <ListViewItem Content="Song 3"></ListViewItem>
                <ListViewItem Content="Song 4"></ListViewItem>
                <ListViewItem Content="Song 5"></ListViewItem>
                <ListViewItem Content="Song 6"></ListViewItem>

            </ListView>

        </StackPanel>

        <!-- Song Properties -->
        <StackPanel Grid.Column="1" Grid.RowSpan="2">

        </StackPanel>

    </Grid>
</Window>
