<Window x:Class="Arc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arc"
        mc:Ignorable="d"
        Title="ARC" Height="720" Width="1280">
    <Grid Margin="-8,0,8,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100 "/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Search For Songs -->
        <StackPanel Grid.Column="1">
            
            <TextBox Margin="50 75 50 0">Search</TextBox>

            <ListView Margin="50 15 50 0">
                <ListViewItem Content="Song 1"></ListViewItem>
                <ListViewItem Content="Song 2"></ListViewItem>
                <ListViewItem Content="Song 3"></ListViewItem>
                <ListViewItem Content="Song 4"></ListViewItem>
                <ListViewItem Content="Song 5"></ListViewItem>
                <ListViewItem Content="Song 6"></ListViewItem>
            </ListView>

        </StackPanel>
        
        <!-- Song Properties -->
        <StackPanel Grid.Column="2">
                        
        </StackPanel>
    
    </Grid>
</Window>
