<UserControl x:Class="Arc.UserControls.SongLibrary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arc.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="1" Padding="10">
            <StackPanel>
                <Grid Background="Black">
                    <StackPanel>
                        <TextBox Text="{Binding SongData.Title}" TextChanged="TextBox_TextChanged"/>
                        <TextBlock Text="{Binding SongData.Author}" Foreground="White"/>
                    </StackPanel>
                </Grid>
                <Grid Background="Blue" Height="5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="EDIT" Margin="10" Click="ButtonEdit_Click"/>
                    <Button Content="DISPLAY" Margin="10"/>
                </StackPanel>

                <ListBox ItemsSource="{Binding}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Grid Background="White" Width="5"/>
                                <Grid Background="Black">
                                    <DockPanel>
                                        <Button Content="Eye" DockPanel.Dock="Right"/>
                                        <TextBlock Text="asdf"/>
                                    </DockPanel>                                    
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Content="Add" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>        
    </Grid>
</UserControl>
